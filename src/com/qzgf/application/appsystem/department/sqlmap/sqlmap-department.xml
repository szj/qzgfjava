	<!-- 存储过程示例 -->
	<procedure id="findDepartmentByID" parameterClass="java.util.HashMap" resultClass="java.util.HashMap" remapResults="true">
    	<![CDATA[{call pb_get_menu_tree(@userid1:='$userId$')}]]>
    </procedure>
</sqlMap>